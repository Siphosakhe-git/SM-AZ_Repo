<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer src="../models/app.js" type="module"></script>
    <script src="https://cdn.socket.io/socket.io-3.0.0.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous"> <!--used CDN to get bootstrap(for css)-->
    <title>Conference Management Tool</title> <!--title-->
</head>
<body>
<p class="text-info display-5 text-center">Conference Management Tool</p>
<p class="text-secondary display-6 text-center">Sign Up</p>

<form method="post" action="/signup">
    <div class="form-group">
        <label for="signupUserName">UserName</label>
        <input type="username" class="form-control" name="user_name" placeholder="John Doe">
    </div>

    <div class="form-group">
        <label for="signupUserEmail">Email address</label>
        <input type="email" class="form-control" name="user_email" aria-describedby="emailHelp" placeholder="email@example.com">
    </div>

    <div class="form-group">
        <label for="signupDomain">Domain</label>
        <input type="Domain" class="form-control" name="user_domain" placeholder="wits.ac.za, uct.ac.za, ...">
    </div>

    <div class="form-group">
        <label for="signupUserPword">Password</label>
        <input type="password" class="form-control" name="user_pword" placeholder="Password">
    </div>

    <div class="form-group">
        <label for="signupVerifyUserPword">Confirm Password</label>
        <input type="password" class="form-control" name="cpword" placeholder="Confirm Password">
    </div>

    <div class="mb-3">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</form>

<div class="text-info lead text-center">
    <a href="login.ejs"
      class="text-info lead text-center">Already have an account?
      <button class="btn btn-secondary">Sign in</button>
    </a>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
        crossorigin="anonymous">
</script> <!--Bootstrap for java-->

</body>
</html>