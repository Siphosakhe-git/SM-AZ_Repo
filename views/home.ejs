<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous"> <!--used CDN to get bootstrap(for css)-->
    <title>Conference Management Tool</title> <!--title-->
    <style>
        .box{
            border: 2px solid #000;
              padding: 15px;
            overflow-y: auto;
        }
    </style>

</head>

<body style="justify-content: center">

    <div class="box">
        <div class="row align-items-start h-100">

            <section class="pt-4 bg-primary" style="width: 20%">
                <div class=" h-100">
                    <% if ((session.isAd)===1) { %>
                    <button id="newConfBtn" type="button" class="btn my-2 btn-secondary" data-bs-toggle="modal" data-bs-target="#homeCreateConfModal">New conference</button>
                    <% }%>
                </div>

            </section>

            <section class="box" style="width: 60%">
                <ul class="list-group list-group-flush container mt-5 h-100">
                    <form method="POST" action="/viewconf">
                        <% for (var conf in allconf) { %>
                        <li class="list-group-item d-flex justify-content-center align-content-center" style="height: 160px">
                            <div name="confid" class="col-2 py-5"><%= allconf[conf].CONF_ID %></div>
                            <div name="confname" class="col-5 py-5"><%= allconf[conf].CONF_NAME %></div>
                            <div name="conftype" class="col-3 py-5"><%= allconf[conf].CONF_MODE %></div>
                            <input type="submit" value="<%= allconf[conf].CONF_ID %>" name="btn">
                        </li>
                        <% } %>
                    </form>
                </ul>
            </section>

            <div class="modal fade modal-lg" id="homeCreateConfModal" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        
                            <div class="modal-header">
                                <h5 class="modal-title">New Conference</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            
                            <div class="modal-body" id="homeCreateConfModalBody">

                                <form method="post" action="/createconf">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="confname-addon1">Conference Name</span>
                                        <input name="confname" type="text" id="newConferenceName" class="form-control" placeholder="Conference name..." aria-label="Conferencename" aria-describedby="basic-addon1">
                                    </div>

                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="confname-addon1">Conference Summary</span>
                                        <input name="confsumm" type="text" id="newConferenceName" class="form-control" placeholder="Conference summary..." aria-label="Conferencename" aria-describedby="basic-addon1">
                                    </div>

                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="confname-addon1">Conference Keywords</span>
                                        <input name="confwords" type="text" id="newConferenceName" class="form-control" placeholder="Conference keywords..." aria-label="Conferencename" aria-describedby="basic-addon1">
                                    </div>
                
                                    <div class="row justify-content-center text-center mt-3">
                                        <div class="col-5 form-check">
                                            <input class="form-check-input" type="radio" name="conftype" id="newConferenceSB" value="0">
                                            <label class="form-check-label" for="newConferenceSB">Single-blind</label>
                                        </div>
                
                                        <div class="col-5 form-check">
                                            <input class="form-check-input" type="radio" name="conftype" id="newConferenceDB" value="1">
                                            <label class="form-check-label" for="newConferenceDB">Double-blind</label>
                                        </div>
                                    </div>
                                </div>
                
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" >Close</button>
                                    <button type="submit" id="homeCreateConfBtn" class="btn btn-secondary">Next</button>
                                </div>
                            </form>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>

</body>
</html>